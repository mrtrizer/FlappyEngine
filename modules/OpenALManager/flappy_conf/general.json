{
    "name":"OpenALManager",
    "modules": [
        {
            "path":"../Core"
        },
        {
            "path":"../ResManager"
        },
        {
            "path":"../Math"
        }
    ],
    "cxx":{
        "flags": [
            "-std=c++1y"
        ],
        "header_dirs": [
            "./src"
        ],
        "src_dirs": [
            "./src"
        ]
    },
    "cmake": {
        "module_path": "cmake",
        "packages": [
            {
                "name":"OpenAL",
                "libs":"${OPENAL_LIBRARY}",
                "includes":"${OPENAL_INCLUDE_DIR}"
            },
            {
                "name":"Vorbis",
                "libs":"${VORBIS_LIBRARY}",
                "includes":"${VORBIS_INCLUDE_DIR}"
            },
            {
                "name":"Ogg",
                "libs":"${OGG_LIBRARY}",
                "includes":"${OGG_INCLUDE_DIR}"
            }
	]
    }
}
