{
    "name":"Sdl2",
    "modules": [
        {
            "path":"../Core"
        },
        {
            "path":"../Tools"
        },
        {
            "path":"../Gl"
        },
        {
            "path":"../CoreComponents"
        }
    ],
    "cxx":{
        "flags": [
            "-std=c++1y"
        ],
        "header_dirs": [
            "./src"
        ],
        "src_dirs": [
            "./src"
        ]
    },
    "cmake": {
        "packages": [
            {
                "name":"GLEW",
                "libs":"${GLEW_LIBRARIES}",
                "includes":"${GLEW_INCLUDE_DIRS}"
            },
            {
                "name":"SDL2",
                "libs":"${SDL2_LIBRARIES}",
                "includes":"${SDL2_INCLUDE_DIRS}"
            },
            {
                "name":"SDL_Image",
                "libs":"${SDL_IMAGE_LIBRARIES}",
                "includes":"${SDL_IMAGE_INCLUDE_DIRS}"
            },
            {
                "name":"OpenGL",
                "libs":"${OPENGL_LIBRARIES}",
                "includes":"${OPENGL_INCLUDE_DIRS}"
            }
        ]
    }
}
